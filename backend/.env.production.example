# Production Environment Configuration

# Database Configuration - USE NEON/PRODUCTION DATABASE
DATABASE_URL=postgresql+psycopg://user:password@host:port/database?sslmode=require

# Better Auth Configuration - GENERATE SECURE SECRET
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=REPLACE_WITH_SECURE_32_PLUS_CHARACTER_SECRET

# Server Configuration
DEBUG=false
ENVIRONMENT=production

# CORS Configuration - PRODUCTION DOMAINS ONLY (JSON array)
ALLOWED_ORIGINS=["https://your-frontend-domain.com"]

# API Configuration
API_VERSION=v1

# Error Tracking - CONFIGURE SENTRY FOR PRODUCTION
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
